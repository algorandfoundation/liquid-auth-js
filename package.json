{
  "name": "liquid-auth-js",
  "private": true,
  "workspaces": [
    "packages/*",
    "example"
  ],
  "scripts": {
    "dev": "concurrently \"npm:dev:*\"",
    "dev:utils": "npm run dev --if-present --workspace @algorandfoundation/utils",
    "dev:sdk": "wait-on ./packages/liquid-auth-core/lib/index.js && npm run dev --if-present --workspace @algorandfoundation/liquid-client",
    "dev:ui": "wait-on ./packages/liquid-auth-client-js/lib/index.js && npm run dev --if-present --workspace basic-example",
    "build": "npm run build --workspace @algorandfoundation/utils && npm run build --workspace @algorandfoundation/liquid-client",
    "lint": "npm run lint --if-present --ws",
    "test": "npm run test --if-present --ws",
    "test:cov": "npm run test:cov --if-present --ws",
    "release": "npm run release --workspace @algorandfoundation/utils && npm run release --workspace @algorandfoundation/liquid-client"
  },
  "author": "Algorand Foundation",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0"
  }
}
